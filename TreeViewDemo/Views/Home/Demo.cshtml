@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map-like Content</title>
    <style>
        body {
            margin: 0;
            overflow: hidden; /* Hide overflow for a clean look */
        }
        
        #map-container {
            display: flex; /* Enable flexbox */
            width: 100vw; /* Take up full viewport width */
            height: 100vh; /* Take up full viewport height */
            justify-content: center; /* Center content horizontally */
            align-items: center; /* Center content vertically */
        }
        
        #map {
            width: 2000px; /* Adjust width as needed for your content */
            height: 100%; /* Take up full container height */
            background-color: #f0f0f0; /* Example background color */
            position: relative; /* Needed for overflow handling */
            overflow-x: auto; /* Enable horizontal scrolling */
            white-space: nowrap; /* Prevent content wrapping */
        }
        
        #map::before, #map::after {
            content: "";
            display: inline-block;
            width: 50%; /* 50% overflow on each side */
            height: 100%; /* Take up full container height */
            background-color: rgba(0, 0, 0, 0.2); /* Semi-transparent background for overflow areas */
            position: absolute;
            top: 0;
        }
        
        #map::before {
            left: -50%; /* Position before element */
        }
        
        #map::after {
            right: -50%; /* Position after element */
        }
    </style>
</head>
<body>
    <div id="map-container">
        <div id="map">
            This is the map content that will overflow on both sides.
        </div>
    </div>
</body>
</html>
