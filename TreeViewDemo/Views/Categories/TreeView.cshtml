@using Newtonsoft.Json
@using TreeViewDemo.Data
@using Microsoft.EntityFrameworkCore
@inject AppDbContext _db
@model IEnumerable<Category>
@{
    Layout = null;
    bool editMode = ViewBag.editMode ?? false;
    var treeNames = await _db.AppUsers.Select(m => m.TreeName).Where(m => !string.IsNullOrEmpty(m)).Distinct().ToListAsync();
}

<!DOCTYPE html>

<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <meta name="viewport" content="width=device-width"/>
    <title>Tree View</title>
    <link href="~/lib/tree-data/css/treedata.min.css" rel="stylesheet"/>
    <link href="~/lib/tree-data/css/sintax.css?v=@Globals.StaticAssetsVersion" rel="stylesheet"/>
    <link href="~/css/zoom-dragging.css?v=@Globals.StaticAssetsVersion" rel="stylesheet" />
    <style>
        .hidden{
            display: none;
        }
        .opacity0{
            opacity: 0 !important;
        }
        
        #tree > ul > li > a, #tree > ul > li > span{
            visibility: hidden;
        }
    </style>
    <link href="/css/zoom-dragging.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
</head>
<body class="opacity0">
<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Node</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="edit-modal-body">
                body
                @* @{ await Html.RenderPartialAsync("~/Views/Categories/Edit.cshtml", new Category { Partial  = true }, null); } *@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="container">
    <div class="row" style="position: fixed; top: 60px; right: 24px; z-index: 9999;">
        <div class="col-md-12">
            @(await Html.PartialAsync("_LoginArea"))
        </div>
    </div>
    <div class="row" id="map-search-area">
        <div class="col-md-12">
            <div class="search-form">
                <form asp-controller="Categories" asp-action="TreeView">
                    <input type="search" class="form-control float-start m-1 w-25" name="keyword" placeholder="Search via Tree Name" required="required" list="tree-list" value="@ViewBag.keyword"/>
                    <input type="search" class="form-control float-start m-1 w-25" name="parentName" placeholder="Search via Parent" value="@ViewBag.parentName"/>
                    <input type="search" class="form-control float-start m-1 w-25" name="grandParentName" placeholder="Search via Grand Parent" value="@ViewBag.grandParentName"/>
                    <button type="submit" class="btn btn-primary btn-sm m-1 py-2 px-3 text-white">
                        <i class="fa fa-search" aria-hidden="true"></i>
                        Search
                    </button>

                    <a class="btn btn-primary btn-sm m-1 py-2 px-3 text-white" href="/Categories/TreeView">
                        <i class="fa fa-refresh" aria-hidden="true"></i>
                        Refresh
                    </a>

                    <a class="btn btn-primary btn-sm m-1 py-2 px-3 text-white" href="/Categories">
                        <i class="fa fa-home" aria-hidden="true"></i>
                        Home
                    </a>

                    <datalist id="tree-list">
                        @foreach (var item in _db.Categories.Select(m => m.User.TreeName).Distinct().ToList())
                        {
                            <option value="@item">@item</option>
                        }
                    </datalist>
                </form>
            </div>
        </div>
    </div>
    <div id="tree-map">
        <div id="tree"></div>
    </div>
    @* <input type="number" value="100" id="zoom-value" style="position:fixed; right:5px; padding:2px; top:5px; width: 50px;"/> *@
</div>
<div style="margin:30px 0;"></div>
@* <div style="position: fixed; top: 10px; right: 10px;"> *@
@*     <button onclick="clearLocalStorage()" class="btn btn-info btn-sm">Clear Position</button> *@
@* </div> *@
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/tree-data/js/treedata.js" asp-append-version="true"></script>
<script>
    var tree = @Html.Raw(JsonConvert.SerializeObject(Model.BuildTree()));
    var editMode = @Html.Raw(Json.Serialize(editMode));
    var modelId = @Html.Raw(Json.Serialize(Model.Select(m => m.Id).FirstOrDefault()))
    TreeData(tree, "#tree");
</script>
<script src="/js/zoom-dragging.js?v=@Globals.StaticAssetsVersion"></script>
<script src="/js/scroll-to-mid.js?v=@Globals.StaticAssetsVersion"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" integrity="sha512-GWzVrcGlo0TxTRvz9ttioyYJ+Wwk9Ck0G81D+eO63BaqHaJ3YZX9wuqjwgfcV/MrB2PhaVX9DkYVhbFpStnqpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>